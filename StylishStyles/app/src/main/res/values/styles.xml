<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_margin">@dimen/button_margin</item>

    </style>

    <style name="AppText.Green">
        <item name="android:textColor">#00AA00</item>
    </style>
    <style name="AppText.Blue">
        <item name="android:textColor">#5555FF</item>
    </style>
    <style name="AppText.Red">
        <item name="android:textColor">#FF6666</item>
    </style>

    <style name="AppText.Blue.small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="AppText.Green.small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/normal_button_size</item>
        <item name="android:layout_height">@dimen/normal_button_size</item>
        <item name="android:layout_margin">@dimen/button_margin</item>



    </style>
    <style name="Button.small">
        <item name="android:layout_height">@dimen/small_button_size</item>
        <item name="android:layout_width">@dimen/small_button_size</item>
    </style>


    <style name="Button.Green">
        <item name="android:background">#00AA00</item>
    </style>
    <style name="Button.Blue">
        <item name="android:background">#5555FF</item>
    </style>
    <style name="Button.Red">
        <item name="android:background">#FF6666</item>
    </style>

    <style name="Button.Red.Big">
        <item name="android:layout_height">@dimen/big_button_size</item>
        <item name="android:layout_width">@dimen/big_button_size</item>
    </style>
    <style name="Button.Green.small">
        <item name="android:layout_height">@dimen/small_button_size</item>
        <item name="android:layout_width">@dimen/small_button_size</item>
    </style>

    <style name="ButtonRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/content_margin</item>
        <item name="android:layout_marginBottom">@dimen/content_margin</item>
        <item name="android:layout_marginLeft">@dimen/content_margin</item>
        <item name="android:layout_marginRight">@dimen/content_margin</item>

    </style>
</resources>
